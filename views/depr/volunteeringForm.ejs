<!DOCTYPE html>
<html>
    <head>
        <!--google map-->
        <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY&callback=myMap"></script>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!--CSS -->
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="container">
            <div class="formBG">
                <div class="contact-image">
                    <img src="/Users/shiv/Documents/contact-image.png">
                </div>
                <form action="/volunteer" method="post">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <input type="text" class="form-control" placeholder="First Name" id="firstName" name="firstName">
                        </div>
                        <div class="form-group col-lg-6">
                            <input type="text" class="form-control" placeholder="Last Name" id="lastName" name="lastName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="mailID">Email ID</label>
                            <input class="form-control" type="email" placeholder="Email ID" id="mailID" name="mailID">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg">
                            <label for="address1">Address 1</label>
                            <input type="text" class="form-control" placeholder="Apartment, Building Name, Street Name..." id="address1" name="address1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg">
                            <label for="address2">Address 2</label>
                            <input type="text" class="form-control" placeholder="Street Name..." id="address2" name="address2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="prefDate">Preferred Day:</label>
                            <input type="date" class="form-control" placeholder="dd/mm/yyyy" id="prefDate" name="prefDate" min="2022-03-25" max="2022-04-30">  <!--limit the dates, add T&C-->
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="timings">Preferred Timings:</label>
                            <input type="time" class="form-control" id="timings" name="prefTime" min="09:00" max="19:00" value="10:00">  <!--limit the timings, add T&C-->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="dropdown">
                                <label for="location">Select Shelter Location:&nbsp;</label>
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" id="location" name="location">Select<span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a>Juhu</a></li>
                                    <li><a>Versova</a></li>
                                    <li><a>Powai</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div id="googleMap" style="width:100%;height:400px;"></div>
                            <script>
                                function myMap() {
                                var mapProp= {
                                  center:new google.maps.LatLng(51.508742,-0.120850),
                                  zoom:5,
                                };
                                var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
                                }
                            </script>
                        </div>
                    </div>
                    <div class="row">
                        <dic class="col-lg-4">
                            <button type="submit" class="btn btn-outline-primary">Submit!</button>
                        </dic>
                    </div>
                </form>
            </div>
        </div>
        <!-- <script src="volunteer.js" charset="utf-8"></script> -->
    </body>
</html>
