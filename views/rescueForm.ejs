<!DOCTYPE html>
<html>
    <head>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <!--CSS -->
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body ng-app name="fosterForm" style="background-color: black;" class="bgTrail" novalidate>
        <div class="wrapper">
        <%- include('_sideNav.ejs') %>

        <div class="container contact-form pop">
            <div class="contact-image">
                <img src="/img/heart.png" alt="rocket_contact"/>
            </div>
            <form action="/rescue" method="POST" enctype="multipart/form-data">
                <h3>Found an animal?</h3>
                <p style="padding-bottom:10px; text-align: center;">Kindly help us in rescuing the animal you found!</p>
                <div class="row">
                    <div class="form-group col-lg-12 spaceBet">
                        <input type="text" class="form-control" placeholder="Name" id="name" name="name" pattern="^[a-zA-Z]+$" ng-required="true">
                        <span ng-show="myForm.firstName.$touched && myForm.firstName.$invalid"></span>
                    </div>
                    <div class="form-group col-lg-6 spaceBet">
                        <input class="form-control" type="email" placeholder="Email ID" id="mailID" name="mailID">
                    </div>
                    <div class="form-group col-lg-6 spaceBet">
                        <input class="form-control" placeholder="Contact No." id="phoneNo" name="phoneNo">
                    </div>
                    <div class="form-group col-lg-12 spaceBet">
                        <input class="form-control" placeholder="Location Found At" id="location" name="location">
                    </div>
                    <div>
                        <label for="image">Upload Image</label>
                        <input type="file" id="image"
                               name="image" value="" required>
                    </div>
                    <div class="form-group col-lg-6 spaceBet">
                        <input type="submit" name="btnSubmit" class="btnFoster" value="Apply" ng-disabled = "myForm.firstName.$error.invalid || myForm.firstName.$error.required ||
                        myForm.lastName.$error.invalid || myForm.lastName.$error.required">
                    </div>
                </div>
            </form>
        </div>
    </div>
    </body>
</html>

